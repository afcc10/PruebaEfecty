@model PruebaTecnicaEfecty.Models.Persona

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3>Esta seguro que quiere eliminar el registro?</h3>
<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDocumento)
        </dt>
        <dd class="col-sm-10">
            @{
                switch (@Model.TipoDocumento.Trim())
                {
                    case "T.I":
                        <span>Tarjeta de identidad</span>
                        break;
                    case "C.C":
                        <span>Cedula de ciudadania</span>
                        break;
                    case "PS":
                        <span>Pasaporte</span>
                        break;
                    case "C.CE":
                        <span> Cedula de extranjeria </span>
                        break;
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorGanar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorGanar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoCivil)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RowId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
