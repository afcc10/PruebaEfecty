@model PruebaTecnicaEfecty.Models.Persona

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalle</h1>

<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">            
            @Html.DisplayNameFor(model => model.TipoDocumento)
        </dt>
        <dd class="col-sm-10">
            @{
                switch (@Model.TipoDocumento.Trim())
                {
                    case "T.I":
                        <span>Tarjeta de identidad</span>
                        break;
                    case "C.C":
                        <span>Cedula de ciudadania</span>
                        break;
                    case "PS":
                        <span>Pasaporte</span>
                        break;
                    case "C.CE":
                        <span> Cedula de extranjeria </span>
                        break;
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorGanar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorGanar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoCivil)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RowId">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
